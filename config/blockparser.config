<?xml version="1.0" encoding="utf-8"?>
<Objectivity>
  <globalSettings>
    <defaultSessionPool softLimit="10"
                        hardLimit="10"
                        sessionWait="-1">
      <session initialSmallObjectPageSpace="200"
               maximumSmallObjectPageSpace="500"
               initialNumberOfLargeObjectEntries="200"
               maximumNumberOfLargeObjectEntries="500"
               largeObjectMemoryLimit="0"
               defaultMrowMode="NoMROW"
               connectRetries="2"
               serverTimeout="25"
               enableLockConflictInformation="false"/>
    </defaultSessionPool>
  </globalSettings>
  <sessionPools>
    <sessionPool name="read_pool"
               purposes="read"
               softLimit="10"
               hardLimit="10"
               sessionWait="-1">
      <session defaultMrowMode="MROW"
               initialSmallObjectPageSpace="500"
               maximumSmallObjectPageSpace="5000"/>
    </sessionPool>
    <sessionPool name="read_pool_nomrow"
               purposes="read_nomrow"
               softLimit="10"
               hardLimit="10"
               sessionWait="-1">
      <session defaultMrowMode="NoMROW"
               initialSmallObjectPageSpace="500"
               maximumSmallObjectPageSpace="5000"/>
    </sessionPool>
    <sessionPool name="write_pool"
               purposes="write"
               softLimit="10"
               hardLimit="10"
               sessionWait="-1">
      <session defaultMrowMode="NoMROW"
               initialSmallObjectPageSpace="500"
               maximumSmallObjectPageSpace="2000"/>
    </sessionPool>
  </sessionPools>
  <LocationPreferences allowNonPreferredLocations="true">
    <LocationPreferenceRank>
      <LocalHost value="true"/>
    </LocationPreferenceRank>
  </LocationPreferences>
</Objectivity>
